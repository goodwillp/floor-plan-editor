{
  "name": "floor-plan-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "vitest --run --config vitest.visual.config.ts",
    "test:summary": "tsx src/test/test-summary.ts",
    "test:validate": "tsx src/test/validate-tests.ts",
    "test:all": "npm run test:coverage && npm run test:visual && npm run test:summary && npm run test:validate"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
